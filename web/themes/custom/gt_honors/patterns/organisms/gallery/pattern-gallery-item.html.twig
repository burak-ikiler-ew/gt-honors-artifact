{% set prefix = 'gallery-item' %}
{% set classes = [
  prefix,
  prefix ~ '--' ~ variant,
  'col-xs-6 col-md-4 col-lg-3'
] %}

{% set data_group = 'gallery-group--' ~ parent %}
{% set attributes = attributes.addClass(classes) %}

<div{{ attributes.addClass(classess) }}>
  <a href="{{ path }}" class="lightbox" data-group="{{ data_group }}" {% if caption %} data-caption="{{ caption }}" {% endif %}>
    {{ image }}
  </a>
</div>

