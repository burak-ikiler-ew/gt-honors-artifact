{% set prefix = 'accordion' %}

{%
  set classes = [
    prefix,
  ]
%}

<div {{ attributes.addClass(classes) }}>
  <div class="{{ prefix }}__button" role="button" tabindex="0" aria-controls="{{ prefix }}-{{ acc_id }}" aria-expanded="false">
    <h3 class="h5">{{ title }}</h3>
  </div>
  <div class="{{ prefix }}__panel" role="region" id="{{ prefix }}-{{ acc_id }}" aria-hidden="true">
    <div class="{{ prefix }}__body">
      {{ body }}
    </div>
  </div>
</div>
